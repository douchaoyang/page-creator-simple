@import ('@/style/reset.styl');
@import ('@/font/aliyunit/iconfont.css');

.w-e-drop-panel {
  .w-e-panel-content-color {
    width: 184px;
  }
}

.w-e-menu-tooltip-v5:hover:after, .w-e-menu-tooltip-v5:hover:before {
  z-index: 2;
}

.editor-main {
  overflow: hidden;
  width: 100vw;
  height: 100vh;
  padding: 0 250px 56px 200px;
  background: #696e75;

  .editor-left {
    border-radius: 12px;
    background: #fff;
    border: 1px solid #ebebeb;
    padding: 12px 0;
    position: absolute;
    width: 184px;
    left: 8px;
    top: 8px;
    bottom: 8px;
    z-index: 10;

    .schema {
      height: 50%;
      overflow-y: auto;
      padding: 0 6px 8px;
      position: relative;

      .schema-title {
        font-size: 14px;
      }

      ul {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        padding-top: 8px;

        li {
          width: 80px;
          height: 32px;
          display: flex;
          align-items: center;
          background-color: rgba(0, 102, 255, 0.08);
          border-radius: 4px;
          transition: background-color 0.2s ease;
          margin-top: 8px;
          font-size: 12px;
          padding: 0 8px;
          cursor: pointer;

          &:hover {
            background-color: rgba(0, 45, 113, 0.125);
          }

          i {
            font-size: 16px;
            margin-right: 4px;
            color: rgb(16, 85, 255);
          }
        }
      }
    }
  }

  .editor-right {
    border-radius: 12px;
    background: #fff;
    border: 1px solid #ebebeb;
    padding: 12px 0;
    position: absolute;
    width: 234px;
    right: 8px;
    top: 8px;
    bottom: 8px;
    z-index: 10;

    #rich-container {
      width: 100%;
      border-top: 1px solid #ddd;
      border-bottom: 1px solid #ddd;

      .bold {
        font-weight: bold;
      }

      .italic {
        font-style: italic;
      }
    }

    #rich-toolbar {
      .w-e-bar {
        justify-content: center;
        padding: 0 10px;
        background: #f1f1f1;
      }

      .w-e-bar-item {
        padding: 0;
        height: auto;
        width: 20%;

        button {
          padding: 0 4px;
        }
      }
    }

    #rich-editor {
      height: 160px;
    }

    .attr-config {
      height: 100%;
      overflow-y: auto;
      overflow-x: hidden;
    }

    .attr-title {
      font-size: 14px;
      margin-bottom: 12px;
      padding: 0 6px;
    }

    .attr-item {
      padding: 0 6px 12px;
      margin-bottom: 12px;
      border-bottom: 1px solid #f0f0f0;
      display: flex;
      align-items: center;
      justify-content: space-between;

      .el-input {
        width: 80px;

        .el-input__inner {
          height: 24px;
          line-height: 24px;
          border-radius: 8px;
          text-align: center;
          color: #ff24bd;
        }
      }

      .left {
        .label {
          font-size: 14px;
          color: #777;
        }
      }

      .attr-control {
        width: 100%;
        display: flex;
        flex-wrap: wrap;
        margin-top: -6px;

        span {
          width: 64px;
          height: 28px;
          font-size: 12px;
          display: flex;
          align-items: center;
          justify-content: center;
          border-radius: 14px;
          overflow: hidden;
          background-color: #edf4ff;
          cursor: pointer;
          transition: background-color 0.2s ease;
          margin: 6px 6px 0 0;

          i {
            font-size: 12px;
            margin-right: 2px;
          }

          &:hover {
            background-color: rgba(0, 45, 113, 0.125);
          }
        }
      }
    }
  }

  .editor-nav {
    height: 56px;
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;
    z-index: 10;
    display: flex;
    align-items: center;
    justify-content: center;

    .nav-container {
      height: 40px;
      padding: 0 16px;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 12px;
      background: #fff;
      border: 1px solid #ebebeb;

      .item {
        margin: 0 6px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 12px;
      }

      input {
        width: 40px;
        text-align: center;
        font-size: 12px;
        border: 1px solid #ebebeb;
      }

      .label {
        color: #fff;
        background: #15ae5c;
        padding: 0 6px;
        line-height: 20px;
      }
    }
  }

  .editor-rect {
    width: 100%;
    height: 100%;
    position: relative;

    &.grabbing {
      cursor: grabbing;

      .shape {
        cursor: grabbing !important;
      }
    }

    &.grab {
      cursor: grab;

      .shape {
        cursor: grab !important;
      }
    }

    .editor-paint {
      transform-origin: left top;
      background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="100%" height="100%"><pattern id="pixelGrid" width="10" height="10" patternUnits="userSpaceOnUse"><rect width="10" height="10" fill="%23fff"/><path d="M 10 0 L 0 0 0 10" fill="none" stroke="%23eee" stroke-width="1"/></pattern><rect width="100%" height="100%" fill="url(%23pixelGrid)"/></svg>');
      image-rendering: pixelated;
      position: relative;

      .ref-x-line {
        width: 1px;
        height: 100%;
        position: absolute;
        box-shadow: 0 0 0 1px #9747ff inset;
        pointer-events: none;
        overflow: hidden;
        top: 0;
        z-index: 999;
        display: none;
      }

      .ref-y-line {
        width: 100%;
        height: 1px;
        position: absolute;
        box-shadow: 0 0 0 1px #9747ff inset;
        pointer-events: none;
        overflow: hidden;
        left: 0;
        z-index: 999;
        display: none;
      }

      .ref-control {
        width: 30px;
        position: absolute;
        z-index: 1000;
        background-color: #edf4ff;

        span {
          display: flex;
          align-items: center;
          justify-content: center;
          width: 30px;
          height: 30px;

          &:hover {
            background-color: #9747ff;

            i {
              color: #fff;
            }
          }

          i {
            font-size: 14px;
            font-weight: 600;
            color: #666;
          }
        }
      }

      .shape {
        position: absolute;
        background: #ccc;
        cursor: move;

        &:after {
          content: '';
          position: absolute;
          width: 100%;
          height: 100%;
          left: 0;
          top: 0;
          z-index: 999;
        }

        &.selected {
          &:before {
            content: '';
            position: absolute;
            width: 100%;
            height: 100%;
            left: 0;
            top: 0;
            box-sizing: border-box;
            border: 1px solid #9747ff;
            pointer-events: none;
            z-index: 999;
          }
        }
      }
    }
  }
}
